<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">
    <View
        android:background="@color/indianred"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:textSize="15sp"
        android:padding="10dp"
        android:text="@string/Summarynice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/lavender"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:id="@+id/pinlun1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:text="金庸:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <jaydenxiao.com.expandabletextview.ExpandableTextView
            android:id="@+id/jy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:animDuration="200"
            android:padding="8dp"
            app:collapseDrawable="@drawable/icon_green_arrow_up"
            app:collapseExpandGrarity="right"
            app:collapseExpandTextColor="@color/main_color"
            app:contentTextColor="@color/gray"
            app:contentTextSize="14sp"
            app:expandDrawable="@drawable/icon_green_arrow_down"
            app:maxCollapsedLines="3"
            app:textCollapse="@string/collapse"
            app:textExpand="@string/expand"


            />
        <View
            android:background="@color/lavender"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pinlun2"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:text="村上春树:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <jaydenxiao.com.expandabletextview.ExpandableTextView
            android:id="@+id/cscs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:animDuration="200"
            android:padding="8dp"
            app:collapseDrawable="@drawable/icon_green_arrow_up"
            app:collapseExpandGrarity="right"
            app:collapseExpandTextColor="@color/main_color"
            app:contentTextColor="@color/gray"
            app:contentTextSize="14sp"
            app:expandDrawable="@drawable/icon_green_arrow_down"
            app:maxCollapsedLines="3"
            app:textCollapse="@string/collapse"
            app:textExpand="@string/expand"


            />
        <View
            android:background="@color/lavender"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pinlun3"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:text="莫言:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <jaydenxiao.com.expandabletextview.ExpandableTextView
            android:id="@+id/moyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:animDuration="200"
            android:padding="8dp"
            app:collapseDrawable="@drawable/icon_green_arrow_up"
            app:collapseExpandGrarity="right"
            app:collapseExpandTextColor="@color/main_color"
            app:contentTextColor="@color/gray"
            app:contentTextSize="14sp"
            app:expandDrawable="@drawable/icon_green_arrow_down"
            app:maxCollapsedLines="3"
            app:textCollapse="@string/collapse"
            app:textExpand="@string/expand"


            />
        <View
            android:background="@color/lavender"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>

    <ImageView
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/nice"
        android:layout_width="254dp"
        android:layout_height="200dp" />



</LinearLayout>
